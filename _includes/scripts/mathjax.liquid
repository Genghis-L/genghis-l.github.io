{% if site.enable_math %}
  {% unless page.pseudocode %}
    <!-- MathJax -->
    <script type="text/javascript">
      window.MathJax = {
        tex: {
          packages: ['base', 'ams', 'amsmath', 'autoload', 'color', 'mathtools'], // 添加更多包
          tags: 'ams',
        },
      };
    </script>
    <script
      defer
      type="text/javascript"
      id="MathJax-script"
      src="{{ site.third_party_libraries.mathjax.url.js }}"
      integrity="{{ site.third_party_libraries.mathjax.integrity.js }}"
      crossorigin="anonymous"
    ></script>
    <script
      defer
      src="{{ site.third_party_libraries.polyfill.url.js }}"
      crossorigin="anonymous"
    ></script>
  {% endunless %}
{% endif %}
